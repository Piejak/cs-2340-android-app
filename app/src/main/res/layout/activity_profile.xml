<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_height="410dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="@string/prompt_email"
            android:id="@+id/profile_email" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/profile_password"
            android:hint="@string/prompt_password" />

        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/profile_account_type"
            android:layout_height="35dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/profile_name"
            android:hint="Name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/profile_age"
            android:hint="Age" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/profile_address"
            android:hint="Address" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/profile_affiliation"
            android:hint="Affiliation" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_height="70dp">

        <Button
            android:text="Cancel"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/cancelProfileButton"
            android:layout_weight="0.26"
            android:onClick="cancelProfileButtonPressed"
            />

        <Button
            android:text="Change Profile"
            android:layout_height="wrap_content"
            android:layout_weight="0.26"
            android:id="@+id/changeProfileButton"
            android:onClick="changeProfileButtonPressed"
            android:layout_width="125dp"
            />


    </LinearLayout>
</RelativeLayout>